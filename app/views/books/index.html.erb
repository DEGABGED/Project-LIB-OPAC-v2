<!-- Catalogue -->
<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i> Book Catalogue </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
          </tr>
        </thead>
        <!--tfoot>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
          </tr>
        </tfoot-->
        <tbody>
          <% for book in @books do %>
            <% puts book.title %>
            <tr>
              <td><%= book.id %></td>
              <td><%= link_to book.title, edit_book_path(book), remote: true %></td>
              <td><%= book.author %></td>
              <td><%= book.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
