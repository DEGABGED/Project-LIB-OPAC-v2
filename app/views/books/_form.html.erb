<div class="modal-content">
  <div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header"><%=text%> Book Entry</div>
      <div class="card-body">
        <%= form_with(model: book, id: "create-book", remote: true) do |form| %>
          <% if book.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

              <ul>
                <% book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, :id => :book_title, :class => "form-control", "aria-describedby" => "emailHelp", :placeholder => "Enter book's title" %>
          </div>
          <div class="form-group">
            <%= form.label :author %>
            <%= form.text_field :author, :id => :book_author, :class => "form-control", "aria-describedby" => "emailHelp", :placeholder => "Enter author's name" %>
          </div>
          <div class="form-group">
            <%= form.label :section %>
            <%= form.text_field :section, :id => :book_section, :class => "form-control", "aria-describedby" => "emailHelp", :placeholder => "Enter section" %>
          </div>
          <div class="form-group">
            <%= form.label :status %>
            <%= form.text_field :status, :id => :book_status, :class => "form-control", "aria-describedby" => "emailHelp", :placeholder => "Enter status" %>
          </div>
          &nbsp;
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <%= form.label :batch %>
                <%= form.number_field :batch, :id => :book_batch, :class => "form-control", "aria-describedby" => "emailHelp", :placeholder => "Enter batch" %>
              </div>
              <div class="col-md-6">
                <%= form.label :size %>
                <%= form.text_field :size, :id => :book_size, :class => "form-control", "aria-describedby" => "emailHelp", :placeholder => "Enter size" %>
              </div>
              &nbsp;
            </div>
          </div>
          <%= form.submit :value => "#{text} Entry", :class => "btn btn-primary btn-block" , :remote => true %>
          <% if book.id != nil %>
            <%= link_to "Delete Entry", book_path(book.id), :data => {:confirm => "Are you sure?"}, :id => "deleteButton", :class => "btn btn-danger btn-block", :method => :delete, :remote => true %>
          <% end %>
          <a class="btn btn-danger btn-block" data-dismiss="modal" href="#">Cancel</a>

        <% end %>
      </div>
    </div>
  </div>
</div>
